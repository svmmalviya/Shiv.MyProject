@model Shiv.MyProject.Web.Host.Controllers.MyCountry

@{
    Layout = "_Layout";
}

<div class="row m-auto mt-lg-3 w-75 ">
    <div class="col-md-3"></div>
    <div class="col-md-6 border-2 table-bordered p-2">
        <form asp-action="Create" asp-controller="Country" method="post" >
            @Html.AntiForgeryToken()
            <div class="form-group mb-2 m-0 ">
                    <input type="text"
                           asp-for="CountryName" class="form-control" placeholder="eg. India" />
                    <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="w-100"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary float-right">Add Country</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>