@model Shiv.MyProject.Web.Host.Controllers.MyStates

@{
    Layout = "_Layout";
}
<div class="row m-auto mt-lg-3 w-75 ">
    <div class="col-md-3"></div>
    <div class="col-md-6 border-2 table-bordered p-2">
        <form asp-action="Create" asp-controller="State" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group mb-2 m-0 ">
                <select class="form-control" asp-for="cid" asp-items="@ViewBag.countries">
                </select>
                <span asp-validation-for="cid" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 m-0 ">
                <input class="form-control" type="text" data-val="true"
                       placeholder="eg. Delhi"
                       asp-for="StateName">
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <button type="submit" class="btn btn-outline-primary float-right">Add State</button>
            </div>

        </form>
    </div>
    <div class="col-md-3"></div>

</div>